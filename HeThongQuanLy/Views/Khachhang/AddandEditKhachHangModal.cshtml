@{
    Layout = null;
    var obj = ViewData["Obj"] as Model.EF.KhachHang;
    var mode = ViewData["Mode"];
}

<div id="AddandEditKhachHangModal" class="modal fade">
    <div class="modal-dialog modal-lg" id="m1">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><b>Thông tin khóa học</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="frmAddEdit">
                    <input type="hidden" name="mode" id="mode" value="@ViewData["Mode"]" />
                    <div class="form-group">
                        <input class="form-control" id="iID" type="hidden" value="@obj.ID">
                    </div>
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <input type="text" class="form-control" id="iName" value="@obj.TenKH">
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" class="form-control" id="iDiaChi" value="@obj.DiaChi">
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="text" class="form-control" id="iSoDienThoai" value="@obj.SoDienThoai">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" class="form-control" id="iMail" value="@obj.Mail">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="bt" type="button" class="btn btn-success" onclick="Save(@obj.ID)">Save</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/js_BackEnd/KhachHang.js"></script>

}




