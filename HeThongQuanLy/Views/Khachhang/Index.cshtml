                                    <tr>
                                        <th>Tên khách hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Mail</th>
                                        <th>Địa chỉ</th>
                                        <th>Trạng thái</th>
                                        <th>Nhân viên</th>
                                        <th><button type="button" onclick="fnShowModal('0')" class="btn btn-success">Thêm</button></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderPage("EditTrangThaiModal.cshtml")

        @section scripts{
            <script src="~/Scripts/js_BackEnd/KhachHang.js"></script>
        }
