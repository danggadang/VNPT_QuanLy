
@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Bảng khách hàng</h3>
                        </div>
                        <div class="box-body">
                            <table id="dtable" class="table table-bordered table-striped" width="100%">
