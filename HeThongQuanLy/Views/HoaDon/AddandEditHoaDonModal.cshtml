@{
    Layout = null;
    var obj = ViewData["Obj"] as Model.EF.HoaDon;
}

<div id="AddandEditHoaDonModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><b>Thông tin hóa đơn</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="frmAddEdit">
                    <div class="form-group">
                        <input class="form-control" id="iID" type="hidden" value="@obj.ID">
                    </div>
                    <div class="form-group">
                        <label>Khách hàng</label>
                        <select id="sKhachHang">

                        </select>
                    </div>
                    <div class="form-group">
                        <label>Nhân viên</label>
                        <select id="sNhanVien"></select>
                    </div>
                    <div class="form-group">
                        <label>Dịch vụ</label>
                        <select id="sDichVu"></select>
                    </div>
                    <div class="form-group">
                        <label>Số lượng</label>
                        <input type="number" class="form-control" id="iSoLuong" value="@obj.SoLuong">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button id="bt" type="button" class="btn btn-success" onclick="Save(@obj.ID)">Save</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>






