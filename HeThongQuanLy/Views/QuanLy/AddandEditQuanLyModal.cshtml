@{
    Layout = null;
    var obj = ViewData["Obj"] as Model.EF.NhanVien;
    var mode = ViewData["Mode"];
}

<div id="AddandEditQuanLyModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><b>Thông tin quản lý</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="frmAddEdit">
                    <input type="hidden" name="mode" id="mode" value="@ViewData["Mode"]" />
                    <div class="form-group">
                        <input class="form-control" id="iID" type="hidden" value="@obj.ID">
                    </div>
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input type="text" class="form-control" id="iUserName" value="@obj.TenDangNhap">
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="text" class="form-control" id="iPassword" value="@obj.MatKhau">
                    </div>
                    <div class="form-group">
                        <label>Tên nhân viên</label>
                        <input type="text" class="form-control" id="iName" value="@obj.TenNV">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" class="form-control" id="iMail" value="@obj.Mail">
                    </div>
                    <div class="form-group">
                        <label for="type">Giới Tính</label><br />
                        <input type="radio" name="rdGioiTinh" value="Nam" @if (obj.GioiTinh == "Nam") { ViewContext.Writer.Write("checked"); } />&nbsp;&nbsp; Nam &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" name="rdGioiTinh" value="Nu" @if (obj.GioiTinh == "Nu") { ViewContext.Writer.Write("checked"); } />&nbsp;&nbsp; Nữ &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" name="rdGioiTinh" value="Khac" @if (obj.GioiTinh == "Khac") { ViewContext.Writer.Write("checked"); } />&nbsp;&nbsp; Khác &nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" class="form-control" id="iImage" style="display:none" value="@obj.Anh" onchange="ReadImage(this)">
                        @if (mode == "Edit")
                        {
                            <img id="image" src="~/Images/@obj.Anh" style="width:150px; height:150px; cursor:pointer" />
                        }
                        else
                        {
                            <img id="image" src="~/Images/saveImage.png" style="width:150px; height:150px; cursor:pointer" />
                        }
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button id="bt" type="button" class="btn btn-success" onclick="Save(@obj.ID)">Save</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/js_BackEnd/QuanLy.js"></script>

}
<script>
    $('#image').click(function () {
        $('#iImage').click();
    });

</script>




